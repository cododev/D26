# Application Configuration
APP_NAME="DeediX Shop"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://deedixtech.com
APP_TIMEZONE=Africa/Lagos

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Security
APP_KEY=generate_random_32_character_key
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=60

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://deedixtech.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Storage
STORAGE_PATH=storage
UPLOAD_MAX_SIZE=5242880
ALLOWED_UPLOAD_TYPES=jpg,jpeg,png,webp,pdf

# Email Configuration (Optional)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@deedixtech.com
MAIL_FROM_NAME="${APP_NAME}"

# Payment Gateway (Optional - for future)
PAYMENT_PROVIDER=paystack
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=error
LOG_MAX_FILES=14
